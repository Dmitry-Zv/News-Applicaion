<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_setting_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/night_mode"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_nights_24"
            app:layout_constraintBottom_toBottomOf="@+id/const_layout"
            app:layout_constraintStart_toStartOf="@+id/const_layout"
            app:layout_constraintTop_toTopOf="@+id/const_layout" />

        <TextView
            android:id="@+id/item_setting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/grey_black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/const_layout"
            app:layout_constraintStart_toEndOf="@+id/item_setting_image"
            app:layout_constraintTop_toTopOf="@id/const_layout"
            tools:text="Apply Night Mode" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/item_setting_switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@id/const_layout"
            app:layout_constraintEnd_toEndOf="@id/const_layout"
            app:layout_constraintTop_toTopOf="@id/const_layout" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

